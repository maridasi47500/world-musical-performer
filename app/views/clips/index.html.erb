<p style="color: green"><%= notice %></p>

<h1>Clips</h1>

<div id="clips">
  <% @clips.each do |clip| %>

    <p>
    <%= clip.title %>
    <%= image_tag clip.image, width:100, height:100 %>
      <%= link_to "Show this clip", clip %>
    </p>
  <% end %>
</div>

<%= link_to "New clip", new_clip_path %>
